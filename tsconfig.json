{
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowJs": true,
    // "baseUrl": ".",
    // "paths": {
    //   "*": ["node_modules/*"]
    // }
  },
  "include": [
    "src/**/*"
  ]
}